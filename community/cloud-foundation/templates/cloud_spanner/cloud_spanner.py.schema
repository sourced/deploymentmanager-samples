info:
  title: Cloud Spanner
  author: Sourced Group Inc.
  description: Creates a Cloud Spanner instance and database.

required:
  - displayName
  - nodeCount
  - instanceConfig

properties:
  displayName:
    type: string
    description: The cluster display name in GCP Console.
  nodeCount:
    type: integer
    description: The number of instances allocated to your node.
  instanceConfig:
    type: string
    description: The cluster location.
    enum:
      - northamerica-northeast1
      - us-central1
      - us-east1
      - us-east4
      - us-west1
      - us-west2
      - europe-north1
      - europe-west1
      - europe-west4
      - asia-south1
      - asia-east1
      - asia-northeast1
      - asia-southeast1
      - nam3
      - nam-eur-asia1
  bindings:
    type: array
    description: IAM policies applied at the CLUSTER level.
    items:
      type: object
      required:
        - role
        - members
      properties:
        role:
          type: string
          description: The IAM role assigned as part of the IAM policy.
          enum:
            - roles/spanner.admin
            - roles/spanner.viewer
            - roles/spanner.databaseAdmin
        members:
          type: array
          description: A list of members granted the given role for ??? under ??? the IAM policy.
          items:
            type: string
            pattern: user:.*|serviceAccount:.*|group:.*
  databases:
    type: array
    description: A list of databases created under the instance cluster.
    items:
      type: object
      required:
        - name
      properties:
        name:
          type: string
          description: The name of the database created under the instance cluster.
        bindings:
          type: array
          description: A list of IAM policies applied at the DATABASE level.
          items:
            type: object
            required:
              - role
              - members
            properties:
              role:
                type: string
                description: The role assigned as part of ??? under ??? the IAM policy.
                enum:
                  - roles/spanner.databaseAdmin
                  - roles/spanner.databaseReader
                  - roles/spanner.databaseUser
              members:
                type: array
                description: A list of members granted the given role for ??? under ??? the IAM policy.
                items:
                  type: string
                  pattern: user:.*|serviceAccount:.*|group:.*

documentation:
  - templates/cloud_spanner/README.md

examples:
  - templates/cloud_spanner/examples/cloud_spanner.yaml

info:
  title: Cloud DNS Create Resource RecordSets
  author: Sourced Group Inc.
  description: |
    Template to control DNS from inside a DM Template.
    Creates dns resource ResourceRecordSets
    For more information on this resource:
      - https://cloud.google.com/dns/records/
      - https://cloud.google.com/dns/api/v1/managedZones

imports:
  - path: dns_records.py

required:
  - zoneName
  - dnsName
  - resourceRecordSets

properties:
  zoneName:
    type: string
    pattern: ^[(a-z)\d\-].{1,63}$
    description: |
      User assigned name for the managed zone.
      This is required by Cloud DNS
  dnsName:
    type: string
    pattern: \.$
    description: |
      The DNS name of this managed zone, for instance "example.com.".
      Assert that it ends in a dot, as that is the most common mistake.
  resourceRecordSets:
    type: array
    description: |
      The ResourceRecordSets meant to be in the zone. See
      https://cloud.google.com/dns/api/v1/resourceRecordSets.
    object:
      type: object
      description: An Individual ResourceRecordSet.
      items:
        required:
          - name
          - type
          - ttl
          - rrdatas
        name:
          type: string
          description: Name of the DNS record. Must end in dnsName.
        type:
          type: string
          description: Type of the record.
          enum:
            - A
            - AAAA
            - CNAME
            - MX
            - NAPTR
            - NS
            - PTR
            - SOA
            - SPF
            - SRV
            - TXT
        ttl:
          type: integer
          description: The time-to-live cache seconds for this record.
          minimum: 0
        rrdatas:
          type: array
          description: |
            As defined in RFC 1035 (section 5) and RFC 1034 (section 3.6.1).
          object:
            type: string
